
<div class="mt-4 p-5 bg-light text-black rounded">

  <h4 class="display-4">
    Editing friend
  </h4>
  <%= render "form", friend: @friend %>
  <br/>
  <%= link_to "Show this friend", @friend , class: 'btn btn-outline-success'%>
  <%= link_to "Back to friends", friends_path, class: 'btn btn-outline-info'%>
  <hr class="my-4">
  <h4>
    Want to Delete this friend?
  </h4>
  <%= button_to "Delete", @friend, class:"btn btn-outline-danger", method: :delete, :data => {:confirm => 'Are you sure?'}%>

</div>




